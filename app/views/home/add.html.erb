<h1>Project Start - Cash Flow</h1>

<form action="/add" method="post">
  <%= csrf_meta_tags %>
  <div class="mb-3">
    <label for="type" class="form-label">Type</label>
    <input type="text" class="form-control" name="tipo" id="tipo" placeholder="Enter the type of movement">
  </div>

  <div class="mb-3">
    <label for="value" class="form-label">Value</label>
    <input type="number" step="0.01" min="0" class="form-control" name="value" id="value" step="0.01" placeholder="Inform the value">
  </div>

  <div class="mb-3">
    <label for="status" class="form-label">Status</label>
    <select class="form-select" name="status" id="status">
      <option value="<%= Cash::CREDIT %>">Input</option>
      <option value="<%= Cash::DEBT %>%%>">Output</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>