<h1>Project Start - Cash Flow</h1>

<div>
  <div class="card mb-3 divBox" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-header mb-3" >Total value</h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">$<%= number_with_precision(@total_value, precision: 2, separator: ',', delimiter: '.') %></h6>
    </div>
  </div>
  <div class="card mb-3 divBox" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-header mb-3">Revenues</h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">$<%= number_with_precision(@revenues, precision: 2, separator: ',', delimiter: '.') %></h6>
    </div>
  </div>
  <div class="card mb-3 divBox" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-header mb-3">Expenses</h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">- $<%= number_with_precision(@expenses, precision: 2, separator: ',', delimiter: '.') %></h6>
    </div>
  </div>
</div>
<%= render 'input' %>
<%= render 'table' %>